  "version": "0.2.0",
  "configurations": [

    {
      "name": "Chrome",
      "type": "chrome",
      "request": "launch",
      "sourceMaps": true,
      "url": "http://lvh.me:3000/",
      "webRoot": "${workspaceFolder}/src",
      "preLaunchTask": "npm: start"
    },
    {
      "name": "Firefox",
      "type": "firefox",
      "request": "launch",
      "sourceMaps": "client",
      "reAttach": true,
      "url": "http://lvh.me:3000/",
      "webRoot": "${workspaceFolder}/src",
      "preLaunchTask": "npm: start"
    }
  ]
}
